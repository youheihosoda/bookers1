<div class="index">
 <h1 class="top1">Books</h1>
 <div class="main">
 <table>
 <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
   </tr>
 </thead>
  <tbody>
   <% @books.each do |list| %>
    <tr>
     <td>
      <p class="text1"><%= list.title %></p>
     </td>
     <td>
      <p class="text2"><%= list.body %></p>
     </td>
     <td>
      <%= link_to "Show", book_path(list.id),class:'show' %>
     </td>
     <td>
      <%= link_to "Edit", edit_book_path(list.id) ,class:'edit' %>
     </td>
     <td>
      <%= link_to "Destroy", book_path(list.id), method: :delete, "data-confirm" => "本当に削除しますか？" ,class:'delete' %>
     </td>
    </tr>
   <% end %>
  </tbody>
 </table>
  </div>
<!-- form_with部分 -->
 <div class="form">
  <h2>New book</h2>
  <%= form_with model: @book,local:true do |f| %>
<!--エラー表示-->
   <% if @book.errors.any? %>
    <table border="1" colspan="2">
      <tr>2 errors prohibited this book from being saved:</tr>
     <% @book.errors.full_messages.each do |msg| %>
      <td><%= msg %></td>
      </table>
     <% end %>
    </ul>
   <% end %>
    <!--<!-ここまで--->
   <div class="title_field">
    <h4>Title</h4>
    <%= f.text_field :title %>
   </div>
   <div class="body_field">
    <h4>Body</h4>
    <%= f.text_area :body %>
   </div>
   <%= f.submit 'Create Book' %>
  <% end %>
</div>
